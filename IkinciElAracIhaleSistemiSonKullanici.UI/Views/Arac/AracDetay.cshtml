<script>
	// Formu submit etme fonksiyonu
	function submitForm() {
		// Teklif edilen fiyatı al
		var teklifFiyat = document.getElementById('fiyatBilgisi').value;

		// Formun action özelliğini güncelle
		var form = document.getElementById('teklifFormu');
		form.action = '/Arac/TeklifVer?fiyat=' + encodeURIComponent(teklifFiyat);

		// Formu submit et
		form.submit();
	}
</script>
